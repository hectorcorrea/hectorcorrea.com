<%- include header -%>
<form class="form-horizontal" role="form">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" class="form-control"
      text="<%= blog.title %>" placeholder="Blog title" autofocus/>
  </div>

  <div class="form-group">
    <label for="summary">Summary</label>
    <textarea id="summary" class="form-control" rows="10" placeholder="Enter summary here">
      <%= blog.summary %>
    </textarea>
  </div>

  <div class="form-group">
    <label for="text">Text</label>
    <textarea id="text" class="form-control" rows="10" placeholder="Enter text here">
      <%= blog.text %>
    </textarea>
  </div>

  <div class="form-group">
      <button type="button" class="btn btn-primary">Save</button>
  </div>

  <!-- add placeholder to display errors -->
  <p>ID: <%= blog.key %><p/>
  <p>Created: <%= blog.createdOn %></p>
  <p>Updated: <%= blog.updatedOn %></p>
  <p>Posted: <%= blog.postedOn %></p>

</form>
<%- include footer -%>