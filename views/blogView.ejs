<%- include header -%>
<h1><%= blog.title %></h1>

<p><span><%= blog.text %></span></p>

<% if (isAuth) { %>
  <button type="button" class="btn btn-primary">Edit</button>
  <% if (blog.isDraft) { %>
    <button type="button" class="btn">Post Blog</button>
  <% } else { %>
    <button type="button" class="btn">Mark as Draft</button>
  <% } %>
<% } %>

<p class="text-muted">
  <small>Blog posted on: <%= blog.postedOn %></small>
</p>

<% if (isAuth) { %>
  <p class="text-muted">
    <small>Created on: <%= blog.createdOn %>, Last update: <%= blog.updatedOn %></small>
  </p>
<% } %>
<%- include footer -%>
